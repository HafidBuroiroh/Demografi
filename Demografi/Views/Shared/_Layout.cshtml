<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] Data Demografi</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.2.1/css/all.min.css"
          integrity="sha512-MV7K8+y+gLIBoVD59lQIYicR65iaqukzvf/nwasF0nqhPay5w/9lJmVM2hMDcnK1OnMGCdVK+iQrJ7lzPJQd1w==" crossorigin="anonymous" referrerpolicy="no-referrer" />

</head>

<style>
    .left {
        position: relative;
        margin-left: 87%;
    }

    .dropdown-menus {
        display: none;
        position: absolute;
        background-color: #f1f1f1;
        min-width: 160px;
        box-shadow: 0px 8px 16px 0px rgba(0,0,0,0.2);
        z-index: 1;
        top: 45px;
    }

        .dropdown-menus > .dropend {
        color: black;
        padding: 12px 16px;
        text-decoration: none;
        display: block;
        cursor: pointer;
    }

        .dropdown-menus > .dropend:hover {
        background-color: #ddd;
    }

    /* Show the dropdown menu on hover */
    .dropdowns:hover .dropdown-menus {
        display: block;
    }

        .dropbtn {
      background-color: #4CAF50;
      color: white;
      padding: 16px;
      font-size: 16px;
      border: none;
      cursor: pointer;
    }

    /* The container <div> - needed to position the dropdown content */
    .dp {
      position: relative;
      display: inline-block;
    }

    /* Dropdown Content (Hidden by Default) */
    .dp-content {
      display: none;
      position: absolute;
      background-color: #f9f9f9;
      min-width: 160px;
      box-shadow: 0px 8px 16px 0px rgba(0,0,0,0.2);
      z-index: 1;
    }

    /* Links inside the dropdown */
    .dp-content a {
      color: black;
      padding: 12px 16px;
      text-decoration: none;
      display: block;
    }

    /* Change color of dropdown links on hover */
    .dp-content a:hover {background-color: #f1f1f1}

    /* Show the dropdown menu on hover */
    .dp:hover .dp-content {
      display: block;
    }

    /* Change the background color of the dropdown button when the dropdown content is shown */
    .dp:hover .dropbtn {
      background-color: #3e8e41;
    }
</style>

<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark bg-black border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <div class="dropdown dropdowns">
                    <button class="btn dropdown-toggle text-light fw-bold" type="button" data-bs-toggle="dropdown" aria-expanded="false">
                        Data SID SIPETRO OJK
                    </button>
                    <ul class="dropdown-menu dropdown-menus mx-3">
                        <div class="btn-group dropend">
                            <button type="button" class="btn dropdown-toggle mx-3" data-bs-toggle="dropdown" aria-expanded="false">
                                Transfer Data
                            </button>
                            <ul class="dropdown-menu">
                                <li>@Html.ActionLink("Transfer Data General", "Index", "Transferdata", new{}, new{@class="dropdown-item"})</li>
                                <li>@Html.ActionLink("Transfer Data Provinsi", "Index", "TransferDataProvinsi", new{}, new{@class="dropdown-item"})</li>
                                <li>@Html.ActionLink("Transfer Data Usia", "Index", "TransferDataUsia", new{}, new{@class="dropdown-item"})</li>
                                <li>@Html.ActionLink("Transfer Data Efek", "Index", "TransferDataEfek", new{}, new{@class="dropdown-item"})</li>
                            </ul>
                        </div>
                        <div class="btn-group dropend">
                            <button type="button" class="btn dropdown-toggle mx-3" data-bs-toggle="dropdown" aria-expanded="false">
                                Generate Data
                            </button>
                            <ul class="dropdown-menu">
                                <li>@Html.ActionLink("Generate Data General", "Index", "Generate", new{}, new{@class="dropdown-item"})</li>
                                <li>@Html.ActionLink("Generate Data Provinsi", "Index", "GenerateProvinsi", new{}, new{@class="dropdown-item"})</li>
                                <li>@Html.ActionLink("Generate Data Usia", "Index", "GenerateUsia", new{}, new{@class="dropdown-item"})</li>
                                <li>@Html.ActionLink("Generate Data Efek", "Index", "GenerateEfek", new{}, new{@class="dropdown-item"})</li>
                            </ul>
                        </div>
                    </ul>
                </div>
                <div class="navbar-collapse collapse d-flex justify-content-end">
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a class="nav-link text-light fw-bold me-3" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <button class="btn dropdown-toggle text-light" type="button" data-bs-toggle="dropdown">
                                Hello, Admin <i class="fa-regular fa-circle-user"></i>
                            </button>
                            <div class="dropdown-menu left">
                                @Html.ActionLink("Logout", "Logout", "Login", new{}, new{@class="dropdown-item"})
                            </div>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>

    </header>
    <div class="container">
        <main role="main" class="pb-3 pt-1">
            @RenderBody()
        </main>
    </div>

    <script src="~/lib/jquery/dist/jquery.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>